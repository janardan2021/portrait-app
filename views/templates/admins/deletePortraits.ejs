 <% layout('layouts/boilerplate')%>
 <div class="container pt-3 pb-5 mb-0 mt-0">

  <div class="row justify-content-center pt-3 pb-3">
     <div class="col text-center">
         <h2>Select portraits to delete</h2>
     </div>
 </div>

    <form action="/admin/deletePortraits" method="POST" class="validated-form" novalidate>
      <div class="row justify-content-center pt-3 pb-3 vh-30">

      <% for (let img of allImages)  {%>
        <div class="col-3 text-center pt-2 pb-2 ">
          <img src="<%= img.url %>" alt="" class="img-thumbnail">
          <div class="input-group-text">
            <input class="form-check-input" type="checkbox" name="deletePortraits[]" value="<%=img.filename %>" aria-label="Checkbox for following text input">
          </div>
        </div>
      <% } %>

      <div class="row justify-content-center pt-3 pb-3">
        <div class="col text-center">
          <button class="btn btn-success">Delete Portraits</button>
        </div>
      </div>

      </div>
    </form> 

    <div class="row justify-content-center pt-3 pb-3">
      <div class="col text-center">
        <a href="/admin/workspace"><button class="btn btn-success">Back to workspace</button></a>
      </div>
    </div>  

   </div>
