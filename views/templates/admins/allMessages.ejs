<% layout('layouts/boilerplate')%>

<link rel="stylesheet" href="/css/review.css">

    <div class="container gallery_html pt-3 pb-5 mb-0 mt-0">
      <div class="row justify-content-center pt-3 pb-3">
         <div class="col text-center">
             <h2>All messages</h2>
         </div>
     </div>

    
       
      <div class="row justify-content-center pt-3 pb-3">
        <div class="col-7">
            <div class="accordion" id="accordionPanelsStayOpenExample">

                <% for (let msg of allMessages)  {%>
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse<%= msg._id %>" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                      <strong>From:&nbsp;&nbsp;</strong> <strong><%= msg.name %></strong>
                    </button>
                  </h2>
                  <div id="panelsStayOpen-collapse<%= msg._id %>" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <div><strong>Email:&nbsp;&nbsp;</strong> <strong><%= msg.email %></strong></div>
                      <div><%= msg.subject %></div>
                      <div>
                        <form action="/admin/deleteMessage/<%= msg._id %>?_method=DELETE" method="post">
                            <button class="btn btn-success">Delete message</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
                <% } %>

              </div>
        </div>
    </div>

      
        <div class="row justify-content-center pt-3 pb-3">
         <div class="col text-center">
           <a href="/admin/workspace"><button class="btn btn-success">Back to workspace</button></a>
         </div>
       </div>
  
    </div>