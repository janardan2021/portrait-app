<% layout('layouts/boilerplate')%>
<h1>Register</h1>
<form action="/reviews/register" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input class="form-control" type="password" id="password" name="password" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input class="form-control" type="number" id="rating" name="rating" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="comment">Rating</label>
        <input class="form-control" type="text" id="comment" name="comment" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <button class="btn btn-success">Register</button>
</form>